# Maintainer: Yijun Yu <y.yu@open.ac.uk>
pkgname=fast
pkgver=0.0.6
pkgrel=0
pkgdesc="Flat Abstract Syntax Tree"
url="https://github.com/f-ast/fast"
arch="all"
license="BSD"
depends="srcml srcSlice protobuf flatbuffers antlr4 openjdk8 coreutils"
depends_dev="srcml-dev srcSlice-dev protobuf-dev flatbuffers-dev antlr4-dev"
install=""
source="fast-$pkgver.tar.gz::https://github.com/f-ast/fast/archive/v$pkgver.tar.gz"
builddir="$srcdir/fast-$pkgver"
options="!check !fhs"
build() {
        cd "$builddir"
        make
}

package() {
        cd "$builddir"
        make install prefix="$pkgdir"/usr
}
sha512sums="6e1683e7b7ff2fb648f4dc2e1e9a0e821486e9e40f3f728ddb73321815d7f145ae455f81b5925c3f3b98f77f4cb95c743d898e90a589f03fa3e9c68f98740a12  fast-0.0.6.tar.gz"
