pkgname=fast
pkgver=0.0.8
pkgrel=0
pkgdesc="Flat Abstract Syntax Tree"
url="https://github.com/f-ast/fast"
arch="all"
license="BSD"
depends="srcml srcSlice protobuf flatbuffers antlr4 openjdk8 coreutils"
depends_dev="srcml-dev srcSlice-dev protobuf-dev flatbuffers-dev antlr4-dev"
install=""
source="fast-$pkgver.tar.bz2::http://mcs.open.ac.uk/yy66/fast/v$pkgver.tar.bz2"
#builddir="$srcdir/fast-$pkgver"
builddir="$srcdir"
options="!check !fhs"
build() {
        cd "$builddir"
        make
}

package() {
        cd "$builddir"
        make install prefix="$pkgdir"/usr
}
